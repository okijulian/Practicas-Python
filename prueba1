package okijulian;

import java.util.Scanner; 



public class Okijulian {
    
    public static void IMPRIMIR (int txt){System.out.println(txt);}
         
    public static void IMPRIMIR (String txt){System.out.println(txt);}
         
    public static int TOMAR () {Scanner entradaEscaner = new Scanner (System.in);
                            return Integer.parseInt(entradaEscaner.nextLine());}
                        
   
    public static void main(String[] args) {
     
        int n ;
      
        
        IMPRIMIR("ingrese el numero");
        
        n= TOMAR();
        
      while(n!=1){ 
          
        if (n%2 == 0){ n=n/2 ;
      
               } else {n=(n*3)+1 ;  }
        
        IMPRIMIR(+n);
       }
    
              }
}
